generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  password      String?   // Optional for OAuth users
  name          String?   // Store name from custom registration and OAuth
  oauthProvider String?   // Indicate if the user registered via OAuth
  createdAt     DateTime  @default(now())
  recipes       Recipe[]  // One-to-many relationship with Recipe
}

model Recipe {
  id        Int       @id @default(autoincrement())
  title     String
  ingredients String
  instructions String
  userId    Int
  user      User      @relation(fields: [userId], references: [id]) // Many-to-one relationship with User
}
